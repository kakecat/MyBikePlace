<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-md-6">
      <h2 class="bg-light">商品編集</h2>
      <%= form_with model: @post, url: public_post_path(@post), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label '投稿画像', class: "col-sm-3" %>
          <%= f.file_field :spot_image %>
        </div>
        <div class="form-group">
          <%= f.label '投稿タイトル', class: "col-sm-3" %>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label '内容', class: "col-sm-3" %>
          <%= f.text_area :content %>

        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
        <div class="form-group">
          <%= link_to "削除する",public_post_path(@post),method: :delete,class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>